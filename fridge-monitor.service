[Unit]
Description=Fridge Monitoring Service

[Service]
PIDFile="/run/fridge-monitor.pid"
ExecStart=/usr/bin/python3 /usr/local/bin/fridge-monitor.py
# Disable Python's buffering of STDOUT and STDERR, so that output from the
# service shows up immediately in systemd's logs
Environment=PYTHONUNBUFFERED=1
Restart=on-failure
Type=simple

[Install]
WantedBy=default.target
